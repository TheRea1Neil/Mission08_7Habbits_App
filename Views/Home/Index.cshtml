                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskID">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskID">Delete</a></td>
                        </tr>
                        </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>

        <!-- Quadrant IV: Not Important / Not Urgent -->
        <div class="quadrant">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    Quadrant IV: Not Important / Not Urgent
                </div>
                <div class="card-body">
                    <!-- Tasks for Quadrant IV -->
                    <table class="table table-bordered">
                        <thead class="fw-bold">
                            <tr>
                                <td>Title</td>
                                <td>Due Date</td>
                                <td>CategoryId</td>
                                <td>Completed</td>
                            </tr>
                        </thead>

                        @foreach (var x in Quadrant4)
                        {
                        <tbody>
                        <tr>
                        <td>@x.Title</td>
                        <td>@x.DueDate</td>
                        <td>@x.Category</td>
                        <td>@x.Completed</td>

                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskID">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskID">Delete</a></td>
                        </tr>
                        </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>